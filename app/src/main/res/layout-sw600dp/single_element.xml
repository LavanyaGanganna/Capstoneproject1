<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="@dimen/dimen3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dimen175"
            android:layout_height="@dimen/dimen175"
            android:layout_marginLeft="@dimen/dimen5"
            android:layout_marginStart="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:src="@drawable/beefcut"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/beef"
            android:id="@+id/poster"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen170"
            android:layout_toRightOf="@id/poster"
            android:layout_toEndOf="@id/poster"
            android:textSize="@dimen/textsize30"
            android:text="@string/beef"
            android:textColor="@android:color/black"
            android:id="@+id/recipetext"/>
        <TextView
            android:layout_width="@dimen/dimen85"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/poster"
            android:layout_toRightOf="@id/poster"
            android:layout_below="@id/recipetext"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize25"
            android:text="@string/_20_78"
            android:id="@+id/costext"/>

        <Button
            android:layout_width="@dimen/dimen120"
            android:layout_height="@dimen/dimen44"
            android:textSize="@dimen/textsize35"
            android:id="@+id/order"
            android:text="@string/order"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_below="@id/recipetext"
            android:background="#FF4500"
            android:layout_marginRight="@dimen/dimen1"
            android:layout_marginEnd="@dimen/dimen1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>