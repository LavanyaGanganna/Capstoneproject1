<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dimen155"
            android:layout_height="@dimen/dimen155"
            android:layout_marginLeft="@dimen/dimen5"
            android:layout_marginStart="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/beefcut"
            android:contentDescription="@string/beef"
            android:id="@+id/posterid"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen175"
            android:layout_toRightOf="@id/posterid"
            android:layout_toEndOf="@id/posterid"
            android:textSize="@dimen/textsize35"
            android:text="@string/babycorn"
            android:textColor="@android:color/black"
            android:id="@+id/recipetextid"/>
        <TextView
            android:layout_width="@dimen/dimen85"
            android:layout_height="@dimen/dimen40"
            android:layout_toEndOf="@id/posterid"
            android:layout_toRightOf="@id/posterid"
            android:layout_below="@id/recipetextid"
            android:text="@string/_5_99"
            android:textSize="@dimen/textsize30"
            android:textColor="@android:color/black"
            android:id="@+id/costextid"/>

        <Button
            android:layout_width="@dimen/dimen180"
            android:layout_height="@dimen/dimen40"
            android:textSize="@dimen/textsize35"
            android:id="@+id/remove"
            android:text="@string/remove"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_below="@id/recipetextid"
            android:background="#FF4500"
            android:layout_marginRight="@dimen/dimen1"
            android:layout_marginEnd="@dimen/dimen1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>