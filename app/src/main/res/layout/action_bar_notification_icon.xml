<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:layout_gravity="center"
    android:clickable="true"
    style="@android:style/Widget.ActionButton">

    <ImageView
        android:id="@+id/shopcart"
        android:src="@drawable/shoppingcarticon"
        android:layout_width="90dp"
        android:layout_height="250dp"
        android:gravity="center"
        android:layout_margin="0dp"
        android:contentDescription="@string/shopping_cart"
        />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/hotlist_hot"
        android:layout_width="25dp"
        android:minWidth="17sp"
        android:textSize="16sp"
        android:textColor="#ffffffff"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="@null"
        android:visibility="invisible"
        android:layout_alignTop="@id/shopcart"
        android:layout_alignRight="@id/shopcart"
        android:layout_alignEnd="@id/shopcart"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="3dp"
        android:paddingBottom="1dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:contentDescription="@string/items_selected"
        android:background="@drawable/badge_circle"/>
</RelativeLayout>