<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/dimen10"
            android:layout_marginLeft="@dimen/dimen5"
            android:layout_marginRight="@dimen/dimen10"
            android:layout_marginStart="@dimen/dimen5"
            android:contentDescription="@string/fchicken" />

        <TextView
            android:id="@+id/recipetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/poster"
            android:layout_toRightOf="@id/poster"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize16" />

        <TextView
            android:id="@+id/costext"
            android:layout_width="@dimen/dimen50"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipetext"
            android:layout_toEndOf="@id/poster"
            android:layout_toRightOf="@id/poster"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/order"
            android:layout_width="@dimen/dimen80"
            android:layout_height="@dimen/dimen24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/recipetext"
            android:layout_marginBottom="@dimen/dimen1"
            android:layout_marginEnd="@dimen/dimen1"
            android:layout_marginRight="@dimen/dimen1"
            android:background="#FF4500"
            android:text="@string/order"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize12" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
